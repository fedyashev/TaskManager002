<div class="form">
  <h1 class="text-center">Login</h1>
  <form method="post" action="/auth/login" class="form-login">
    <div class="form-group">
      <label for="username" class="sr-only">Login</label>
      <input type="text" name="username" id="username" placeholder="Login" class="form-control" autofocus>
    </div>
    <div class="form-group">
      <label for="password" class="sr-only">Password</label>
      <input type="text" name="password" id="password" placeholder="Password" class="form-control" autofocus>
    </div>
    <button class="btn btn-primary btn-block">Log in</button>
  </form>  
</div>